<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BottomNavActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/lavander</item>
        <item name="colorPrimaryVariant">@color/lavander</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#00FFEA</item>
        <item name="colorSecondaryVariant">#007B87</item>
        <item name="colorOnSecondary">#000000</item>

        <item name="android:statusBarColor">#460083</item>

    </style>
    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <!-- Screen toolBar if light mode on -->
    <style name="TOOLBAR">
        <item name="android:background">#FF0BC8FD</item>
    </style>
</resources>